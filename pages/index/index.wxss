.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.main {
  margin: 20px auto;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  border-top: 1px solid #ccc;
  border-left: 1px solid #ccc;
  width: 700rpx;
}
.main-box {
  display:flex;
  width:100%;
}
.item-box {
  display: flex;
  height: 70rpx;
  border-bottom: 1px solid #ccc;
  border-right: 1px solid #ccc;
  flex: 1;
  justify-content: center;
  align-items: center;
}
